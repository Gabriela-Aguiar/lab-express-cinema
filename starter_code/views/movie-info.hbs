<div class="movie-info">
    {{#with movies}}
    <div class="image">
        <img src="{{image}}" alt="">
    </div>
    <div class="info">
        <a href="/movies">Go back</a>
        <h1>{{title}}</h1> 
        <h2>Director: {{director}}</h2>
        <h3>Stars</h3>
        <ul>
            {{#each stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{description}}</p>
        <p>{{showtimes}}</p>
    </div>

    {{/with}}
</div>
